<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Product Image with Back and Favorite Buttons -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/neckless" />

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/circle_white_background"
                    android:src="@drawable/back_icon2"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_gravity="start|top" />


                <!-- Favorite Button -->
                <ImageButton
                    android:id="@+id/favoriteButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/circle_white_background"
                    android:src="@drawable/heart_3"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_gravity="end|top" />
            </FrameLayout>

            <!-- Product Name -->
            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pearl and Beads Necklace"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:padding="16dp" />

            <!-- Product Description -->
            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colour Golden plus green, Stone/Beads Pearl Material Silver Length 2.5 Width 2.3 Diameter 1.6 Measurment Unit CM Type Adjustable Unit Single Care Store Pearls Separately To Avoid It GettingÂ Scratched."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingHorizontal="16dp" />

            <!-- Similar Items Label -->
            <TextView
                android:id="@+id/similarItemsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Similar Items in this store"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="16dp" />


        </LinearLayout>
    </ScrollView>

    <!-- Enquiry Button at Bottom -->
    <Button
        android:id="@+id/enquiryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Enquiry"
        android:backgroundTint="@color/Skin"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="16dp" />
</LinearLayout>
