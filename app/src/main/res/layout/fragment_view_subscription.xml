<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_white_background"
            android:src="@drawable/back_icon2"
            android:contentDescription="Back Button" />

        <!-- Title -->
        <TextView
            android:id="@+id/togMembershipTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOG MEMBERSHIP"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Pro Membership Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/proMembershipCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/invite"
                android:backgroundTint="#FF6B6B"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="10% DISCOUNT MORE"
                    android:textColor="@color/Skin"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="₹999 for 6 months"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/joinProMembershipButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#FF6B6B"
                    android:text="Join Pro Membership"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Basic Membership Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/basicMembershipCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/invite"
                android:backgroundTint="#FF6B6B"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXCLUSIVE OFFERS MORE"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textColor="@color/Skin"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹699 for 1 month"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/joinBasicMembershipButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Join Basic Membership"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#FF6B6B"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Membership Benefits Section -->
        <TextView
            android:id="@+id/membershipBenefitsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEMBERSHIP BENEFITS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/membershipBenefitsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/invite"
                android:backgroundTint="#E77E7E">

                <!-- Access to Product Pricing -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/img_38"
                        android:contentDescription="Access to Product Pricing"
                        app:tint="#FF6B6B" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Access to Product Pricing"
                            android:textColor="#FF6B6B"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View pricing details for all jewelry products."
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Exclusive Discounts and Offers -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/img_41"
                        android:contentDescription="Exclusive Discounts Icon"
                        app:tint="#FF6B6B" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exclusive Discounts and Offers"
                            android:textColor="#FF6B6B"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discounts available through TOG or third-party partnerships."
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Uniform Making Charges -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/img_31"
                        android:contentDescription="Uniform Making Charges Icon"
                        app:tint="#FF6B6B" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Uniform Making Charges"
                            android:textColor="#FF6B6B"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consistent making charges across all shops for transparency."
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TOG Partners Section -->
        <TextView
            android:id="@+id/togPartnersTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOG PARTNERS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/togPartnersSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cartler"
                android:contentDescription="Partner 1" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/riddhi_logo"
                android:contentDescription="Partner 2" />
        </LinearLayout>

        <!-- Coupon Section -->
        <LinearLayout
            android:id="@+id/couponSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/invite"
            android:backgroundTint="#FF6B6B">

            <EditText
                android:id="@+id/couponInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter your coupon code"
                android:textColorHint="#FF6B6B"
                android:padding="12dp"
                android:background="@android:color/transparent"
                android:inputType="text" />

            <TextView
                android:id="@+id/applyCouponButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="Apply"
                android:textSize="18dp"
                android:gravity="center"
                android:textColor="#FF6B6B" />
        </LinearLayout>

        <!-- Join Membership Button -->
        <Button
            android:id="@+id/joinMembershipButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF6B6B"
            android:text="Join Membership"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>
